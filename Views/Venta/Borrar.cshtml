@model CrudNet8MVC.Models.Venta

@{
    ViewData["Title"] = "Eliminar Venta";
}

<h1>Eliminar Venta</h1>

<h3>¿Está seguro que desea eliminar esta venta?</h3>
<div>
    <h4>Venta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Fecha
        </dt>
        <dd class="col-sm-10">
            @Model.Fecha.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            Monto
        </dt>
        <dd class="col-sm-10">
            @Model.Monto.ToString("F2")
        </dd>
        <dt class="col-sm-2">
            Descripción
        </dt>
        <dd class="col-sm-10">
            @Model.Descripcion
        </dd>
        <dt class="col-sm-2">
            Persona
        </dt>
        <dd class="col-sm-10">
            @Model.Persona.Nombre
        </dd>
    </dl>

    <form asp-action="Borrar" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a href="@Url.Action("VentaDashboard")" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
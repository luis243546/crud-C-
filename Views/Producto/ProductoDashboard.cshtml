@model IEnumerable<CrudNet8MVC.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Crear" asp-controller="Producto" class="btn btn-primary">Crear Nuevo Producto</a>
</p>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Descripción</th>
        <th>Venta Asociada</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Precio.ToString("C")</td>
            <td>@item.Descripcion</td>
            <td>@item.Venta.Descripcion</td>
            <td>
                <a asp-action="Detalle" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                <a asp-action="Borrar" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
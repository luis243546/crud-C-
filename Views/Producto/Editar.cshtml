@model CrudNet8MVC.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nombre">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Precio">Precio</label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion">Descripción</label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="VentaId">Venta</label>
        <select asp-for="VentaId" class="form-control"
                asp-items="@(ViewData["Ventas"] as SelectList)">
            <option value="">Seleccione una venta</option>
        </select>
        <span asp-validation-for="VentaId" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-success">Guardar Cambios</button>
    <a asp-action="ProductoDashboard" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@using System.Collections
@model CrudNet8MVC.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" asp-for="Nombre" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label for="Precio">Precio</label>
        <input type="number" class="form-control" id="Precio" name="Precio" asp-for="Precio" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label for="Descripcion">Descripción</label>
        <textarea class="form-control" id="Descripcion" name="Descripcion" asp-for="Descripcion"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="VentaId">Venta</label>
        <select asp-for="VentaId" class="form-control" asp-items="@(ViewData["Ventas"] != null
        ? new SelectList((IEnumerable)ViewData["Ventas"], "Id", "Descripcion")
        : new SelectList(Enumerable.Empty<CrudNet8MVC.Models.Venta>(), "Id", "Descripcion"))">
            <option value="">Seleccione una venta</option>
        </select>
        <span asp-validation-for="VentaId" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Crear Producto</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}